{% extends "::base.html.twig" %}

{% block javascripts %}
	{{ parent() }}
{% javascripts '@ShoploAllegroBundle/Resources/public/js/home.js' %}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row-fluid content">
			<div class="span10 box">

				<h3>
					Profile aukcji
				</h3>

				<table class="table">
					<thead>
						<tr>
							<th colspan="2">&nbsp;</th>
							<th class="alignCenter medium">Czas trwania</th>
							<th class="alignCenter medium">Liczba sztuk</th>
							<th class="alignCenter">Utworzony</th>
							<th class="mini">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
						{% for p in profiles %}
						<tr class="active">
							<td colspan="2">
								<a href="{{ path('shoplo_allegro_show_profile', {profileId: p.id}) }}">
									{{ p.name }}
								</a>
							</td>
							<td class="alignCenter">{{ p.duration }} dni</td>
							<td class="alignCenter">25</td>
							<td class="alignCenter">wczoraj</td>
							<td>
								<a href="{{ path('shoplo_allegro_edit_profile', {profileId: i.id}) }}" class="action actionEdit"><span class="icon-edit"></span></a>
								<a href="{{ path('shoplo_allegro_delete_profile', {profileId: i.id}) }}" class="action actionDelete"><span class="icon-remove"></span></a>
							</td>
						</tr>
						{% endfor %}

					</tbody>
				</table>

			</div>

			<div class="span2 sidebar">
				<ul class="menu">
				</ul>
			</div>
		</div>
	</div>
{% endblock %}
